    <xsl:template match="contrib[@ln.user-displayed]">
        <xsl:choose>
            <xsl:when test="normalize-space(.)='&amp;nbsp;' or normalize-space(.)='&#160;'"/>
            <xsl:otherwise>
                <person:contributor contributor-type='contributor'>
                    <xsl:apply-templates select="@*|node()"/>
                </person:contributor> 
            </xsl:otherwise>
        </xsl:choose>
    </xsl:template>

    <!--<xsl:template match="contrib[@ln.user-displayed][contains(.,'&amp;nbsp;') or contains(.,'&#160;')]" priority="2"/>-->
    <xsl:template match="contrib/@ln.user-displayed"/>
    <xsl:template match="contrib/@AUTHOR"/>
    <xsl:template match="comm:info[child::contrib[ not(contains(.,'&amp;nbsp;') and contains(.,'&#160;'))]]" mode="contrib">
        <seclaw:prelim>
            <byline>
                <xsl:apply-templates select="contrib[@ln.user-displayed]"/>
            </byline>
        </seclaw:prelim>
    </xsl:template>
   

<xsl:template match="level/note">
	<xsl:choose>
		<xsl:when test="not(child::*)"/>
		<xsl:when test="child::refpt">
			<xsl:apply-templates select="refpt"/>
		</xsl:when>
		<xsl:otherwise>
			<xsl:apply-templates select="@*|node()"/>
		</xsl:otherwise>
	</xsl:choose>
</xsl:template>

	<xsl:template match="note/refpt">
		<ref:anchor>
			<xsl:apply-templates select="@*"/>
		</ref:anchor>
	</xsl:template>
	
	<xsl:template match="note/refpt/@id">
		<xsl:attribute name="id">
			<xsl:choose>
				<xsl:when test="starts-with(.,'_')">
					<xsl:value-of select="."/>
				</xsl:when>
				<xsl:otherwise>
					<xsl:text>_</xsl:text>
					<xsl:value-of select="."/>
				</xsl:otherwise>
			</xsl:choose>	
		</xsl:attribute>
	</xsl:template>

	<xsl:template match="note/refpt/@type" priority="25">
		<xsl:attribute name="anchortype">
			<xsl:choose>
				<xsl:when test="contains(.,'ext')">
					<xsl:text>global</xsl:text>
				</xsl:when>
				<xsl:otherwise>
					<xsl:text>local</xsl:text>
				</xsl:otherwise>
			</xsl:choose>
		</xsl:attribute>
		
	</xsl:template>
</xsl:stylesheet>
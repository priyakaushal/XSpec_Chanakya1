	<xsl:template match="table/@pgwide">
		<xsl:choose>
			<xsl:when test=".='0'">
				<xsl:attribute name="pgwide">
					<xsl:text>0</xsl:text>
				</xsl:attribute>
			</xsl:when>
			<xsl:otherwise>
				<xsl:attribute name="pgwide">
					<xsl:text>1</xsl:text>
				</xsl:attribute>
			</xsl:otherwise>
		</xsl:choose>		
	</xsl:template>



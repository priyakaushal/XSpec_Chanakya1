    <!-- 20170621:  MCJ:  Increased the priority from 25 to 30 in order to break the ambiguity with the intradocument linking template in 
                          Rosetta_remotelink-self-inter-document-link-LxAdv-intra-document-link.xsl.  A lilabel/remotelink should never be considered
                          an intradocument link (or probably an interdocument link either) so this handling should take priority. -->
	<xsl:template match="remotelink[parent::lilabel][not(preceding-sibling::node()[1][self::refpt] or following-sibling::node()[1][self::refpt])]" priority="30">
			<xsl:value-of select="string-join(. , '')"/>
	</xsl:template>

	


<casedigest:casedigest>
    <casedigest:body>
        <section>
            <bodytext>
                <courtcase:caseexcerpt>
                    <courtcase:head>
                        <casesum:summaries>
                            <casesum:disposition>
                                <p>
                                    <text>The claimants' appeal was dismissed.</text>
                                </p>
                            </casesum:disposition>
                        </casesum:summaries>
                    </courtcase:head>
                </courtcase:caseexcerpt
            </bodytext>
        </section>
    </casedigest:body>
</casedigest:casedigest>

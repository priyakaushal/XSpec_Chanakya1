        &lt;/ci:caseref&gt;
      &lt;/ci:case&gt;
      &lt;ci:content&gt;
        &lt;citefragment searchtype="CASE-CITE-REF"&gt;[2004] 2 All ER 1070&lt;/citefragment&gt;
      &lt;/ci:content&gt;
    &lt;/ci:cite&gt;
  &lt;/case:reportercite&gt;


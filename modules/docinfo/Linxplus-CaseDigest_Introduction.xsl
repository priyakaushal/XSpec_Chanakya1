	<xsl:param name="outputSchemaLoc"
		select="'http://www.lexisnexis.com/xmlschemas/content/legal/case-digest/1/ sch_casedigest.xsd'"/>
	
	<xsl:template match="DIGESTDOC">
		<xsl:if test="child::docinfo/docinfo:selector[text()='digest' or text()='case'] or child::docinfo/docinfo:lbu-indexing-terms/docinfo:lbu-subj[text()='INDEX']">
			<casedigest:casedigest>
